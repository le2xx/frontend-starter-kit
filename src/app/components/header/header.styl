.header
  display: block

  &__logo
    animation: 20s linear infinite gear
    background: url('../assets/images/gear.png') no-repeat
    background-size: contain
    height: 200px
    margin: 20px auto
    width: 200px

  &__title
    color: $title_color
    text-align: center
    text-transform: uppercase

@keyframes gear
  0%
    transform rotate(0deg)

  100%
    transform rotate(360deg)
